<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_white"
    android:orientation="vertical"
    tools:context=".fragments.SceneFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/blue"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/blue"
            android:src="@drawable/scene_manahe1" />

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:title="场景"
            app:titleTextColor="@color/white">
            <ImageButton
                android:layout_marginRight="20dp"
                android:id="@+id/ib_scene_add"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/add_drawable"
                android:clickable="true"
                android:src="@drawable/scene_add" />
        </androidx.appcompat.widget.Toolbar>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/blue" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/more_scene"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:text="推荐场景"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="50dp"
                android:gravity="center_vertical"
                android:text="更多"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:src="@drawable/baseline_keyboard_arrow_right_24" />
        </androidx.cardview.widget.CardView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="150dp">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/scene_gohome"
                    android:gravity="center|bottom"
                    android:text="回家"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_margin="10dp"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/scene_sleep"
                    android:text="睡觉"
                    android:gravity="bottom|center"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />
                <Button
                    android:layout_margin="10dp"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/scene_movehome"
                    android:text="离开"
                    android:gravity="center|bottom"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />
                <Button
                    android:layout_margin="10dp"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/scene_watchmovie"
                    android:text="观影"
                    android:gravity="center|bottom"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:id="@+id/ll_father"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />

</ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>