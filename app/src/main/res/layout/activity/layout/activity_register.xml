<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.RegisterActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/blue"
        app:title="返回"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/baseline_arrow_back_24" />

    <ImageView
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/toplogin" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="注册"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:textColor="#333"
        android:textStyle="bold" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_height="60dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/用户"
            android:textSize="18dp"
            android:text="用户名："
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/et_username"
            android:background="@drawable/login_et_border"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/用户"
            android:textColor="@color/gray"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="请输入用户名" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/密码"
            android:textSize="18dp"
            android:text="密   码："
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

        <EditText
            android:id="@+id/et_password"
            android:background="@drawable/login_et_border"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/密码"
            android:textColor="@color/gray"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="请输入密码"
            android:inputType="textPassword"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/确认密码"
            android:textSize="18dp"
            android:text="确认密码："
            android:layout_gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

        <EditText
            android:id="@+id/et_confirm_password"
            android:background="@drawable/login_et_border"
            android:textSize="15dp"
            android:layout_toRightOf="@+id/确认密码"
            android:textColor="@color/gray"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:hint="请确认密码"
            android:inputType="textPassword" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"></RelativeLayout>

    <Button
        android:id="@+id/b_register"
        android:backgroundTint="@color/blue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="注册"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp" />


</androidx.appcompat.widget.LinearLayoutCompat>